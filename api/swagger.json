                "parameters": [
                    {
                        "name": "user_id",
                        "in": "body",
                        "description": "Id of the user",
                        "type": "integer"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Rooms"
                ],
                "summary": "Delete a room",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "success": {
                                    "type": "integer",
                                    "description": "The id of the deleted room"
                                }
                            }
                        }
                    }
                }
            }
        }
